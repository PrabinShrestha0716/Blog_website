<%- include("Partials/header.ejs") %>
<main class="container">
    <!-- Post form -->
    <div class="post-card">
  <h2>Create a Post</h2>
  <hr class="hr-soft" />
  <form action="/posts" method="POST" enctype="multipart/form-data" class="post-form">
    <label class="post-field">
      <span class="post-label">Your Name</span>
      <input class="post-input" type="text" name="author" required placeholder="ame" />
    </label>

    <label class="post-field">
      <span class="post-label">Whatâ€™s on your mind?</span>
      <textarea class="post-textarea" name="body" required placeholder="Write something..."></textarea>
    </label>

    <label class="post-field">
      <span class="post-label">Add Image (optional)</span>
      <input class="post-file" type="file" name="image" accept="image/*" />
    </label>

    <div class="post-actions">
      <a class="btn-ghost" href="/">Cancel</a>
      <button class="btn-primary" type="submit">Post</button>
    </div>
  </form>
</div>


</body>
</main>

