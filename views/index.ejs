<%- include("Partials/header.ejs") %>

<h2 class="heading">
</h2>
    <% if (posts.length === 0) { %>
      <p class="starter">No posts yet. Be the first!</p>
    <% } else { %>
      <ul>
        <% posts.forEach(post => { %>
          
           <div class="author-line">
          <img src="/image.png" class="author-photo" style="max-width: 30px;">
            <strong><%= post.author %></strong>
          </div>

            <p><%= post.body %></p>
          <% if (post.image) { %>
          <img src="<%= post.image %>" class="photo" alt="post image" style="max-width:350px;" />
          <% } %>
            <br>        
            <div class="post-actions" role="group" aria-label="Post actions">
            <button class="action-btn" type="button">👍 Like</button>
            <button class="action-btn" type="button">💬 Comment</button>
            <button class="action-btn" type="button">↗️ Share</button>
            </div>
            <small>
              Posted on <%= new Date(post.createdAt).toLocaleString() %>
            </small>
             <hr class="post-divider">
        <% }) %>
      </ul>
    <% } %>




<%- include("Partials/footer.ejs") %>

    
